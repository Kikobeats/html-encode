{
  "name": "html-encode",
  "description": "A Node.js library for converting HTML documents of arbitrary encoding into a target encoding (utf8, utf16, etc).",
  "homepage": "https://nicedoc.io/Kikobeats/html-encode",
  "version": "2.1.1",
  "main": "index.js",
  "author": {
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikobeats/html-encode.git"
  },
  "bugs": {
    "url": "https://github.com/kikobeats/html-encode/issues"
  },
  "keywords": [
    "arbitrary",
    "encode",
    "encoding",
    "generic",
    "html",
    "utf16",
    "utf8"
  ],
  "dependencies": {
    "charset": "~1.0.1",
    "iconv-lite": "~0.5.0",
    "is-buffer": "~2.0.3",
    "jschardet": "~2.1.0"
  },
  "devDependencies": {
    "chai": "latest",
    "coveralls": "latest",
    "git-dirty": "latest",
    "got": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "mocha": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "npm-check-updates": "latest",
    "ci-publish": "latest"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dev": "nodemon --exec \"npm start\" -e \"js\"",
    "lint": "standard-markdown README.md && standard",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard {core,test,bin}/**/*.js",
    "start": "node index.js",
    "test": "nyc mocha",
    "postrelease": "npm run release:tags && npm run release:github && ci-publish",
    "prerelease": "npm run update:check",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "release": "standard-version -a",
    "update:check": "ncu -- --error-level 2",
    "update": "ncu -u"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "finepack",
        "git add"
      ],
      "*.js": [
        "prettier-standard",
        "git add"
      ],
      "*.md": [
        "standard-markdown",
        "git add"
      ]
    }
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
