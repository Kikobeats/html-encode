{
  "name": "html-to-utf8",
  "description": "Convert html documents of arbitrary encoding to UTF-8",
  "homepage": "https://github.com/spect88/html-to-utf8#readme",
  "version": "0.1.0",
  "main": "index.js",
  "author": {
    "email": "spect88@gmail.com",
    "name": "Tomasz Szczęśniak-Szlagowski"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spect88/html-to-utf8.git"
  },
  "bugs": {
    "url": "https://github.com/spect88/html-to-utf8/issues"
  },
  "keywords": [
    "encoding",
    "html",
    "utf8"
  ],
  "dependencies": {
    "charset": "~1.0.1",
    "iconv-lite": "~0.4.19",
    "jschardet": "~1.6.0"
  },
  "devDependencies": {
    "coveralls": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "mocha": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "chai": "latest",
    "standard": "latest",
    "standard-markdown": "latest"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dev": "nodemon --exec \"npm start\" -e \"js\"",
    "lint": "standard-markdown && standard",
    "precommit": "lint-staged",
    "precommit-lint": "prettier-standard",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard {core,test,bin}/**/*.js",
    "start": "node index.js",
    "test": "nyc mocha"
  },
  "license": "MIT",
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "lint-staged": {
    "*.js": [
      "precommit-lint",
      "git add"
    ]
  }
}
